<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.journey.activity.AboutUsActivity">

    <RelativeLayout
        android:id="@+id/about_us_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/action_bar_elevation">

        <ImageView
            android:id="@+id/back_about_us"
            style="?actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/normal_space"
            android:src="@drawable/ic_arrow_back_white_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关于我们"
            android:textColor="#fff"
            android:textSize="@dimen/action_bar_title_text_size"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/about_us_actionbar"
        android:layout_margin="@dimen/normal_space">

        <ImageView
            android:id="@+id/about_us_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="32dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/app_icon_498px"/>

        <TextView
            android:id="@+id/about_us_Appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_space"
            android:text="伴旅"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/action_bar_title_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/about_us_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V 1.0 beta"
            android:textStyle="italic"
            android:textColor="@color/colorMaterialGrey400"
            android:textSize="@dimen/normal_text_size"/>

        <TextView
            android:id="@+id/about_us_Appname_English"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="COMPANIONTRIP"
            android:textColor="@color/colorMaterialGrey400"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/about_us_teamname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_space"
            android:text="by ELITES OF CUMTB"
            android:textStyle="italic"
            android:textColor="@color/colorMaterialGrey400"
            android:textSize="@dimen/normal_text_size"/>

        <View
            android:id="@+id/about_us_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/normal_space"
            android:layout_marginRight="@dimen/normal_space"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp"
            android:background="@color/colorMaterialGrey300"/>

        <TextView
            android:id="@+id/about_us_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开发人员"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/about_us_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="高天　李志远　范臻"
            android:textColor="@color/colorMaterialGrey400"
            android:textSize="@dimen/normal_text_size"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_us_members"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="联系我们：Lear00@outlook.com"
            android:textStyle="italic"
            android:textColor="@color/colorMaterialGrey400"
            android:textSize="@dimen/normal_text_size"
            android:background="?selectableItemBackground"/>
    </LinearLayout>
</RelativeLayout>